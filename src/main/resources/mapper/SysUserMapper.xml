<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.permission.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.permission.pojo.SysUser">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="username" property="username" />
        <result column="email" property="email" />
        <result column="password" property="password" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_user_name" property="createUserName" />
        <result column="create_time" property="createTime" />
        <result column="update_user_id" property="updateUserId" />
        <result column="update_user_name" property="updateUserName" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, code, username, password, create_user_id, create_user_name, create_time, update_user_id, update_user_name, update_time
    </sql>

    <!-- 分页查询用户列表 -->
    <select id="selectSysUserList" resultType="com.permission.pojo.SysUser">
        select
            <include refid="Base_Column_List"/>
        from sys_user as su
        <trim prefix="where (" suffix=")" prefixOverrides="or">
            <if test="sysUserInput.name != null and sysUserInput.name != ''">
                or su.name like concat(#{sysUserInput.name}, '%')
            </if>
            <if test="sysUserInput.code != null and sysUserInput.code != ''">
                or su.code like concat(#{sysUserInput.code}, '%')
            </if>
            <if test="sysUserInput.username != null and sysUserInput.username != ''">
                or su.username like concat(#{sysUserInput.username}, '%')
            </if>
        </trim>
    </select>

</mapper>
