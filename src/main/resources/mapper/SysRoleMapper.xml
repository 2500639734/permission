<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.permission.mapper.SysRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.permission.pojo.SysRole">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_user_name" property="createUserName" />
        <result column="create_time" property="createTime" />
        <result column="update_user_id" property="updateUserId" />
        <result column="update_user_name" property="updateUserName" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, code, create_user_id, create_user_name, create_time, update_user_id, update_user_name, update_time
    </sql>

    <!-- 用户id查询角色列表 -->
    <select id="selectRoleListByUserId" resultType="com.permission.pojo.SysRole">
        select
            distinct sr.*
        from sys_role as sr
        left join sys_user_role as sur on sur.role_id = sr.id
        where sur.user_id = #{userId}
    </select>

    <!-- 分页查询角色列表 -->
    <select id="selectRoleList" resultType="com.permission.pojo.SysRole">
        select
        <include refid="Base_Column_List"/>
        from sys_role as sr
        <trim prefix="where (" suffix=")" prefixOverrides="or">
            <if test="selectRoleInput.name != null and selectRoleInput.name != ''">
                or sr.name like concat(#{selectRoleInput.name}, '%')
            </if>
            <if test="selectRoleInput.code != null and selectRoleInput.code != ''">
                or sr.code like concat(#{selectRoleInput.code}, '%')
            </if>
        </trim>
    </select>

</mapper>
